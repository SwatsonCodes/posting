<!DOCTYPE html>
<html>
<head>
<style>
img {
	padding: 1px;
}
img:hover {
	box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
}
hr {
	width:15%;
	margin: auto;
	border: 0;
	height: 0;
	border-top: 1px solid rgba(0, 0, 0, 0.1);
	border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}
.post {
	max-width: 800px;
	margin: auto;
	background: white;
	padding: 10px;
	text-align: center;
}
</style>
</head>
<body>

{{ range $i, $e  := . }}
	{{ if $i }}<hr>{{ end }}
	<div class="post">
		{{ range $e.MediaURLs }}
			<a target="_blank" href="{{ . }}">
			  <img src="{{ . }}" style="width:800px">
			</a>
			{{ end }}
		{{ .Body }}
	</div>
{{ end }}

</body>
</html>
